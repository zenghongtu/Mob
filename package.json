{
  "name": "mob",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "zenghongtu",
    "email": "zenghongtu@gmail.com",
    "url": "https://github.com/zenghongtu"
  },
  "description": "Mob(モブ) - 一个基于 Electron + Umi 开发的喜马拉雅 FM 桌面客户端。A Ximalaya FM desktop client base on Electron & Umi.",
  "main": "./dist/main/main.js",
  "build": {
    "productName": "Mob",
    "appId": "com.zenghongtu.Mob",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Mob ${version}"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "icon": "icons",
      "category": "Music",
      "executableName": "Mob"
    },
    "mac": {
      "category": "public.app-category.music",
      "icon": "icons/dock.icns"
    },
    "files": [
      "dist/",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    }
  },
  "scripts": {
    "start": "yarn run start:renderer &&yarn run build:main:dev",
    "start:main": "electron-webpack dev",
    "start:renderer": "APP_ROOT=src/renderer PORT=6008 BROWSER=none umi dev",
    "build:main:prod": "NODE_ENV=production webpack --config ./build/webpack.main.prod.config.js",
    "build:main:dev": "NODE_ENV=development webpack --config ./build/webpack.main.config.js",
    "build:renderer": "APP_ROOT=src/renderer umi build",
    "test:renderer": "APP_ROOT=src/renderer PORT=6008 BROWSER=none umi test",
    "test:watch": "yarn run test:renderer -w",
    "test": "yarn run test:renderer",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "debug:main": "electron --inspect=5858 -w ./dist/main/main.js",
    "pack": "yarn run build:renderer && yarn run build:main:prod && electron-builder --dir",
    "dist": "electron-builder",
    "prettier": "prettier --list-different \"./**/*.{ts,tsx,js,jsx,less}\""
  },
  "repository": "https://github.com/zenghongtu/Mob",
  "keywords": [
    "Electron",
    "umi",
    "dva",
    "typescript",
    "ximalaya"
  ],
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5",
    "electron-debug": "^2.0.0",
    "electron-webpack": "^2.6.2",
    "electron-webpack-ts": "^3.1.1",
    "husky": "^1.3.1",
    "less-vars-to-js": "^1.3.0",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "ts-loader": "^5.3.3",
    "tslint": "^5.10.0",
    "typescript": "^3.2.4",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "umi": "^2.6.16",
    "umi-plugin-locale": "^2.6.2",
    "umi-plugin-react": "^1.4.2",
    "webpack": "4.28.0",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@types/jest": "^24.0.12",
    "antd": "^3.17.0",
    "axios": "^0.18.0",
    "electron-referer": "^0.3.0",
    "global": "^4.3.2",
    "hash.js": "^1.1.7",
    "http-proxy": "^1.17.0",
    "lodash": "^4.17.11",
    "normalize.css": "^8.0.1",
    "react-player": "^1.11.0",
    "redux-persist": "^5.10.0"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add -f"
    ],
    "*.{css,less,json}": [
      "prettier --write",
      "git add -f"
    ]
  }
}
